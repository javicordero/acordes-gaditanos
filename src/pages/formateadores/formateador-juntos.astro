<div class='juntos-wrapper'>
  <h2 class='juntos-title'>Formateador Blogger + Pre (alineado) + Acordes (50 columnas)</h2>
  <p class='juntos-small'>
    1) Puedes cargar desde URL del blog antiguo o pegar el HTML crudo.<br />
    2) El primer formateador SOLO alinea acordes encima de la letra (sin cortar).<br />
    3) El segundo formateador corta a 50 columnas y envuelve acordes en <code>&lt;a&gt;</code>.
  </p>

  <!-- URL del blog antiguo -->
  <div class='juntos-row'>
    <div class='juntos-col'>
      <label class='juntos-label' for='input-url'>URL del blog antiguo</label>
      <input
        id='input-url'
        type='text'
        placeholder='https://acordesgaditanos.blogspot.com/20xx/xx/acordes-lo-que-sea.html'
      />
      <button class='juntos-btn' id='btn-fetch-url' type='button'>Cargar HTML del blog</button>
      <span class='juntos-small'>
        Usa <code>/api/fetch-url?url=...</code> y vuelca <code>.post-body.entry-content</code> en el
        formateador 1.
      </span>
      <p id='juntos-error' class='juntos-error'></p>
    </div>
  </div>

  <!-- Dos columnas: Formateador 1 y Formateador 2 -->
  <div class='juntos-row'>
    <!-- FORMATEADOR 1: Blogger -> <pre> alineado (sin corte) -->
    <div class='juntos-col'>
      <label class='juntos-label' for='input-blogger'>
        Formateador 1 – HTML crudo de Blogger (entrada)
      </label>
      <textarea id='input-blogger'></textarea>

      <button class='juntos-btn' id='btn-blogger' type='button'>
        Generar &lt;pre&gt; alineado (sin corte)
      </button>

      <label class='juntos-label' for='output-pre'>&lt;pre&gt; generado (alineado)</label>
      <textarea id='output-pre' readonly></textarea>

      <button class='juntos-btn' id='btn-copy-pre' type='button'>
        Copiar &lt;pre&gt; al Formateador 2
      </button>
    </div>

    <!-- FORMATEADOR 2: <pre> alineado -> corte 50 cols + <a> -->
    <div class='juntos-col'>
      <label class='juntos-label' for='input-formateador'>
        Formateador 2 – Entrada (&lt;pre&gt; alineado)
      </label>
      <textarea
        id='input-formateador'
        placeholder='Pega aquí el <pre> del formateador 1 si no usas el botón de copiar…'
      ></textarea>

      <button class='juntos-btn' id='btn-format' type='button'>
        Formatear acordes (50 columnas)
      </button>

      <label class='juntos-label' for='output-final'>
        Salida final (&lt;pre&gt; con corte + acordes envueltos en &lt;a&gt;)
      </label>
      <textarea id='output-final' readonly></textarea>

      <button class='juntos-btn juntos-btn-secondary' id='btn-copy-final' type='button'>
        Copiar salida final
      </button>
    </div>
  </div>
</div>

<script>
  // ============================
  // UTILIDADES GENERALES
  // ============================

  function setError(msg) {
    const el = document.getElementById('juntos-error');
    if (el) el.textContent = msg || '';
  }

  // ============================
  // FORMATEADOR 1
  // Blogger -> <pre> alineado (sin corte)
  // ============================

  const SCALE = 1; // ya probado que te cuadra
  const SHIFT = -2;

  // Acordes en español estilo: Lam, Mim, Sim7b5, Fa#7, etc.
  const chordTokenRegex1 = /^(Do|Re|Mi|Fa|Sol|La|Si)[#b]?[a-zA-Z0-9º°/+]*$/i;

  function looksLikeChordLine(line) {
    const trimmed = line.trim();
    if (!trimmed) return false;
    const tokens = trimmed.split(/\s+/);
    if (!tokens.length) return false;
    let chordish = 0;
    for (const t of tokens) {
      if (chordTokenRegex1.test(t)) chordish++;
    }
    return chordish >= Math.max(1, Math.floor(tokens.length * 0.5));
  }

  // HTML de Blogger -> array de líneas de texto
  function htmlToPlainLines(html) {
    const parser = new DOMParser();
    const doc = parser.parseFromString(`<body>${html}</body>`, 'text/html');
    const body = doc.body;
    let out = '';

    function walk(node) {
      if (node.nodeType === Node.TEXT_NODE) {
        out += node.textContent;
      } else if (node.nodeType === Node.ELEMENT_NODE) {
        const tag = node.tagName;
        if (tag === 'BR') {
          out += '\n';
        }
        for (const child of node.childNodes) {
          walk(child);
        }
        if (tag === 'DIV' || tag === 'P') {
          out += '\n';
        }
      }
    }

    walk(body);
    out = out.replace(/\u00A0/g, ' ');
    return out.split('\n');
  }

  // Reflow de acordes según longitud de la línea de letra (sin cortar aún)
  function reflowChordsLine(chordsLine, lyricLine) {
    const aLine = chordsLine.replace(/\u00A0/g, ' ');
    const lLine = lyricLine.replace(/\u00A0/g, ' ');

    const lenA = aLine.length || 1;
    const lenL = lLine.length || 1;

    const chords = [];
    let i = 0;
    while (i < lenA) {
      if (aLine[i] === ' ') {
        i++;
        continue;
      }
      let j = i;
      while (j < lenA && aLine[j] !== ' ') j++;
      const token = aLine.slice(i, j);
      if (chordTokenRegex1.test(token)) {
        chords.push({ token, col: i });
      }
      i = j;
    }

    if (!chords.length) return aLine;

    const maxOld = lenA - 1 || 1;
    const maxNew = lenL - 1 || 1;
    const outArr = Array(lenL).fill(' ');

    for (const { token, col } of chords) {
      const norm = maxOld > 0 ? col / maxOld : 0;
      const scaledNorm = Math.min(1, Math.max(0, norm * SCALE));
      let newCol = Math.round(scaledNorm * maxNew) + SHIFT;

      if (newCol < 0) newCol = 0;
      if (newCol >= lenL) newCol = lenL - 1;

      for (let k = 0; k < token.length && newCol + k < lenL; k++) {
        outArr[newCol + k] = token[k];
      }
    }

    return outArr.join('');
  }

  // Recorre todas las líneas y aplica reflow acordes+letra sin cortar
  function processLinesWithReflow(lines) {
    const out = [];
    let i = 0;

    // Introducción hasta el primer acorde (se deja tal cual)
    while (i < lines.length && !looksLikeChordLine(lines[i])) {
      out.push(lines[i]);
      i++;
    }

    for (; i < lines.length; i++) {
      const line = lines[i];

      if (looksLikeChordLine(line)) {
        const chordLine = line;
        const nextLine = lines[i + 1] ?? '';
        if (nextLine && !looksLikeChordLine(nextLine)) {
          const newChordLine = reflowChordsLine(chordLine, nextLine);
          out.push(newChordLine);
          out.push(nextLine);
          i++;
        } else {
          out.push(line);
        }
      } else {
        out.push(line);
      }
    }

    return out;
  }

  function htmlToPreText(rawHtml) {
    const lines = htmlToPlainLines(rawHtml);
    const processed = processLinesWithReflow(lines);
    const preBody = processed.join('\n');
    const preText = `<pre>\n${preBody}\n</pre>`;
    return { preText, preBody };
  }

  // ============================
  // FORMATEADOR 2
  // <pre> alineado -> corte 50 cols + <a> en acordes
  // ============================

  const MAX_COLS = 50;

  function isChordToken2(token) {
    const t = token.trim();
    if (!t) return false;
    const re = /^(do|re|mi|fa|sol|la|si|c|d|e|f|g|a|b)(#|b)?[a-z0-9#/]*$/i;
    return re.test(t);
  }

  function isChordLine2(line) {
    const trimmed = line.trim();
    if (!trimmed) return false;
    const tokens = trimmed.split(/\s+/);
    if (!tokens.every(isChordToken2)) return false;
    if (tokens.length === 0) return false;
    if (tokens.length > 20) return false;
    return true;
  }

  // Envuelve cada acorde en <a> sin tocar espacios
  function wrapChordLineWithAnchors(line) {
    let res = '';
    let i = 0;
    while (i < line.length) {
      const ch = line[i];
      if (ch === ' ') {
        res += ch;
        i++;
        continue;
      }
      let j = i;
      while (j < line.length && line[j] !== ' ') j++;
      const token = line.slice(i, j);
      if (isChordToken2(token)) {
        res += `<a>${token}</a>`;
      } else {
        res += token;
      }
      i = j;
    }
    return res;
  }

  // Corta una línea de texto a MAX_COLS respetando palabras si puede
  function breakTextLine(line) {
    const chunks = [];
    const len = line.length;
    let start = 0;

    while (start < len) {
      const remaining = len - start;
      if (remaining <= MAX_COLS) {
        chunks.push(line.slice(start));
        break;
      }

      const hardLimit = start + MAX_COLS;
      const softLimit = start + MAX_COLS + 2;
      let cutIndex = -1;
      const maxSearch = Math.min(softLimit, len);

      for (let i = maxSearch; i > start; i--) {
        const prev = i - 1;
        if (prev >= start && line[prev] === ' ') {
          cutIndex = i;
          break;
        }
      }

      if (cutIndex === -1) {
        cutIndex = hardLimit;
      }

      chunks.push(line.slice(start, cutIndex));
      start = cutIndex;
    }

    return chunks;
  }

  // Dada una línea de acordes y su línea de letra (ya alineadas),
  // corta ambas en trozos de 50 columnas manteniendo la relación
  function wrapChordLyricsPair(chordLine, lyricLine) {
    const lyricChunks = breakTextLine(lyricLine);
    const result = [];

    if (chordLine == null) {
      for (const chunk of lyricChunks) {
        result.push({ chord: null, lyric: chunk });
      }
      return result;
    }

    const paddedChord = chordLine.padEnd(lyricLine.length, ' ');
    let start = 0;

    for (const chunk of lyricChunks) {
      const cut = start + chunk.length;
      let chordChunk = paddedChord.slice(start, cut);
      chordChunk = chordChunk.replace(/\s+$/g, '');
      result.push({ chord: chordChunk, lyric: chunk });
      start = cut;
    }

    return result;
  }

  // Núcleo del formateador-2: recibe el contenido interno de <pre> (alineado)
  // y devuelve el contenido interno de <pre> ya cortado + acordes envueltos
  function processPreBlock(preContent) {
    const rawLines = preContent.split('\n');
    const lines = rawLines.filter((l) => l.trim().length > 0);

    const out = [];
    let i = 0;

    while (i < lines.length) {
      const line = lines[i];
      const textOnly = line.replace(/<[^>]+>/g, '');
      const thisIsChord = isChordLine2(textOnly);

      // Pareja acordes (arriba) + letra (debajo)
      if (thisIsChord && i + 1 < lines.length) {
        const nextLine = lines[i + 1];
        const nextTextOnly = nextLine.replace(/<[^>]+>/g, '');
        const nextIsChord = isChordLine2(nextTextOnly);

        if (!nextIsChord && nextTextOnly.trim().length > 0) {
          // Aquí asumimos que chordLine y lyricLine YA están alineadas (trabajo del formateador 1)
          const pairs = wrapChordLyricsPair(textOnly, nextTextOnly);
          for (const p of pairs) {
            if (p.chord != null && p.chord !== '') {
              out.push({ text: p.chord, isChord: true });
            }
            out.push({ text: p.lyric, isChord: false });
          }
          i += 2;
          continue;
        }
      }

      // Línea que no es pareja acorde+letra
      if (!thisIsChord) {
        const chunks = breakTextLine(textOnly);
        for (const c of chunks) {
          out.push({ text: c, isChord: false });
        }
      } else {
        // Línea de acordes "sueltas"
        out.push({ text: textOnly, isChord: true });
      }

      i++;
    }

    // Aplicamos <a> SOLO a las líneas de acordes
    return out
      .map((item) => (item.isChord ? wrapChordLineWithAnchors(item.text) : item.text))
      .join('\n');
  }

  // ============================
  // INTERACCIÓN UI
  // ============================

  const inputUrl = document.getElementById('input-url');
  const btnFetchUrl = document.getElementById('btn-fetch-url');

  const inputBlogger = document.getElementById('input-blogger');
  const outputPre = document.getElementById('output-pre');
  const btnBlogger = document.getElementById('btn-blogger');
  const btnCopyPre = document.getElementById('btn-copy-pre');

  const inputFormateador = document.getElementById('input-formateador');
  const btnFormat = document.getElementById('btn-format');
  const outputFinal = document.getElementById('output-final');
  const btnCopyFinal = document.getElementById('btn-copy-final');

  // 1) Cargar HTML desde URL antigua usando /api/fetch-url?url=...
  if (btnFetchUrl && inputUrl && inputBlogger) {
    btnFetchUrl.onclick = async () => {
      setError('');
      const rawUrl = inputUrl.value.trim();
      if (!rawUrl) {
        setError('Introduce una URL del blog antiguo.');
        return;
      }

      try {
        btnFetchUrl.disabled = true;
        btnFetchUrl.textContent = 'Cargando...';

        const apiUrl = `/api/fetch-url?url=${encodeURIComponent(rawUrl)}`;
        const res = await fetch(apiUrl);
        if (!res.ok) {
          setError(`Error al hacer fetch de la URL (${res.status}).`);
          return;
        }
        const html = await res.text();

        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const postBody = doc.querySelector('.post-body.entry-content');

        if (!postBody) {
          setError('No se ha encontrado .post-body.entry-content en esa página.');
          inputBlogger.value = html;
          return;
        }

        inputBlogger.value = postBody.innerHTML.trim();
        if (outputPre) outputPre.value = '';
        if (inputFormateador) inputFormateador.value = '';
        if (outputFinal) outputFinal.value = '';
      } catch (err) {
        console.error('Error cargando URL del blog antiguo:', err);
        setError('Error al cargar la URL. Mira la consola para más detalles.');
      } finally {
        btnFetchUrl.disabled = false;
        btnFetchUrl.textContent = 'Cargar HTML del blog';
      }
    };
  }

  // 2) Ejecutar Formateador 1: Blogger -> <pre> alineado
  if (btnBlogger) {
    btnBlogger.onclick = () => {
      setError('');
      const raw = inputBlogger.value || '';
      if (!raw.trim()) {
        setError('No hay HTML de entrada para el Formateador 1.');
        return;
      }
      const { preText } = htmlToPreText(raw);
      outputPre.value = preText;
    };
  }

  // 3) Copiar <pre> alineado al Formateador 2
  if (btnCopyPre) {
    btnCopyPre.onclick = () => {
      setError('');
      inputFormateador.value = outputPre.value || '';
    };
  }

  // 4) Ejecutar Formateador 2: corte 50 cols + <a> en acordes
  if (btnFormat) {
    btnFormat.onclick = () => {
      setError('');
      const rawPre = inputFormateador.value || '';
      if (!rawPre.trim()) {
        setError('No hay &lt;pre&gt; de entrada para el Formateador 2.');
        return;
      }

      const match = rawPre.match(/<pre[^>]*>([\s\S]*?)<\/pre>/i);
      const preContent = match ? match[1] : rawPre;

      const formattedInner = processPreBlock(preContent);
      outputFinal.value = `<pre>\n${formattedInner}\n</pre>`;
    };
  }

  // 5) Copiar salida final
  if (btnCopyFinal) {
    btnCopyFinal.onclick = () => {
      if (!outputFinal) return;
      outputFinal.focus();
      outputFinal.select();
      try {
        const ok = document.execCommand('copy');
        if (!ok && navigator.clipboard) {
          navigator.clipboard.writeText(outputFinal.value);
        }
      } catch (e) {
        console.error(e);
      }
    };
  }

  // ==========================
  // EJECUCIÓN EN CADENA
  // ==========================

  // 1) Cuando escribes una URL y pulsas ENTER → fetch automático
  if (inputUrl) {
    inputUrl.addEventListener('keydown', (ev) => {
      if (ev.key === 'Enter') {
        ev.preventDefault();
        btnFetchUrl?.click();
      }
    });
  }

  // 2) Cuando termina fetchFromUrl → lanzar automáticamente Formateador 1
  const _origFetchUrlClick = btnFetchUrl.onclick;
  btnFetchUrl.onclick = async () => {
    await _origFetchUrlClick();

    // Si se ha rellenado inputBlogger, seguimos
    if (inputBlogger?.value.trim().length > 0) {
      setTimeout(() => btnBlogger?.click(), 150);
    }
  };

  // 3) Cuando termina Formateador 1 → copiar al Formateador 2
  const _origBloggerClick = btnBlogger.onclick;
  btnBlogger.onclick = () => {
    _origBloggerClick();

    // Si se generó un pre, seguimos
    if (outputPre?.value.trim().length > 0) {
      setTimeout(() => btnCopyPre?.click(), 150);
    }
  };

  // 4) Cuando termina copiar al formateador → lanzar Formateador 2
  const _origCopyPreClick = btnCopyPre.onclick;
  btnCopyPre.onclick = () => {
    _origCopyPreClick();

    if (inputFormateador?.value.trim().length > 0) {
      setTimeout(() => btnFormat?.click(), 150);
    }
  };

  // 5) (OPCIONAL) copiar automáticamente la salida final
  // Descomenta si lo quieres activar:

  const _origFormatClick = btnFormat.onclick;
  btnFormat.onclick = () => {
    _origFormatClick();
    setTimeout(() => btnCopyFinal?.click(), 200);
  };
</script>
