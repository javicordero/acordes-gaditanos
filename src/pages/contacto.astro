---
import Footer from '../components/footer.astro';
import Header from '../components/header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Contacto - Acordes Gaditanos' description='Página de contacto de Acordes Gaditanos'>
  <Header />
  <main class='main-container container-layout'>
    <div class='screen'>
      <div class='screen-body'>
        <div class='screen-body-item left'>
          <div class='app-title'>
            <span>CONTACTO</span>
          </div>
          <div class='app-contact'>
            EMAIL : <a href='mailto:acordesgaditanos@gmail.com'> acordesgaditanos@gmail.com </a>
          </div>
        </div>
        <div class='screen-body-item'>
          <form
            id='contact-form'
            class='form'
            method='post'
            novalidate
            data-endpoint='https://formspree.io/f/xdkjawaj'>
            <div class='form-group'>
              <input
                name='name'
                id='name'
                class='form-control'
                placeholder='NOMBRE'
                aria-label='Nombre'
              />
              <div class='error' id='error-name' aria-hidden='true'>Rellena este campo</div>
            </div>

            <div class='form-group'>
              <input
                name='email'
                id='email'
                class='form-control'
                placeholder='EMAIL'
                aria-label='Email'
              />
              <div class='error' id='error-email' aria-hidden='true'>Introduce un email válido</div>
            </div>

            <div class='form-group'>
              <textarea
                name='message'
                id='message'
                class='form-control'
                placeholder='MENSAJE'
                rows='6'
                aria-label='Mensaje'></textarea>
              <div class='error' id='error-message' aria-hidden='true'>Rellena este campo</div>
            </div>

            <div class='form-group buttons'>
              <div id='form-status' class='form-status' aria-live='polite'></div>
              <button type='submit' class='form-button'>ENVIAR</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>

<Footer />

<style>
  button,
  input,
  textarea,
  .main-container {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    letter-spacing: 1.4px;
  }

  .screen {
    position: relative;
    background: var(--card-background-color);
    border: 1px solid var(--primary-color);
    border-radius: 8px;
  }

  .screen:after {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 8px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    z-index: -1;
  }

  .screen-body {
    display: flex;
    gap: 32px;
  }

  .screen-body-item {
    flex: 1;
    padding: 32px;
  }

  .screen-body-item.left {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 16px;
  }

  .app-title {
    display: flex;
    flex-direction: column;
    position: relative;
    color: var(--primary-color);
    font-size: 1.625rem;
  }

  .app-title:after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    bottom: -10px;
    width: 140px;
    height: 4px;
    background: var(--primary-contrast-color);
  }

  .app-contact {
    font-size: 0.75rem;
    color: var(--primary-color);
  }

  .app-contact a {
    color: inherit;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .app-contact a:hover,
  .app-contact a:focus {
    color: var(--primary-contrast-color);
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-group {
    margin-bottom: 0;
  }

  .form-group.message {
    margin-top: 40px; /* 40px */
  }

  .form-group.buttons {
    text-align: right;
  }

  .form-control {
    width: 100%;
    padding: 10px 0;
    background: none;
    border: none;
    border-bottom: 1px solid var(--placeholder-color);
    color: var(--primary-color);
    font-size: 0.875rem;
    outline: none;
    transition: border-color 0.2s;
  }

  .form-control::placeholder {
    color: var(--placeholder-color);
  }

  .form-control.invalid {
    border-bottom-color: var(--error-color);
  }

  .error {
    color: var(--error-color);
    font-size: 0.75rem;
    margin-top: 0.375rem;
    min-height: 18px; /* reserva espacio para una línea de error */
    visibility: hidden;
    opacity: 0;
    transition:
      opacity 160ms ease,
      visibility 160ms ease;
  }

  .error.active {
    visibility: visible;
    opacity: 1;
  }

  /* Mensajes de estado del formulario (success / error) */
  .form-status {
    font-size: 0.95rem;
    margin-bottom: 8px;
    min-height: 20px;
    transition: opacity 160ms ease;
  }

  .form-status.success {
    color: var(--success-color);
  }

  .form-status.error {
    color: var(--error-color);
  }

  .form-control:focus {
    border-bottom-color: var(--primary-contrast-color);
  }

  .form-button {
    background: none;
    border: 1px solid var(--primary-color);
    border-radius: 8px;
    padding: 16px 24px;
    color: var(--primary-color);
    font-size: 0.875rem;
    cursor: pointer;
    outline: none;
    transition: all 0.5s ease;
  }

  .form-button:hover,
  .form-button:focus {
    border-color: var(--primary-contrast-color);
    transform: scale(1.05);
  }

  /* Feedback visual en el botón cuando el formulario es inválido */
  .form-button.invalid {
    border-color: var(--error-color);
    color: var(--error-color);
    transform: none;
  }

  @keyframes button-shake {
    0% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-6px);
    }
    50% {
      transform: translateX(6px);
    }
    75% {
      transform: translateX(-4px);
    }
    100% {
      transform: translateX(0);
    }
  }

  .form-button.shake {
    animation: button-shake 420ms ease;
  }

  @media screen and (max-width: 640px) {
    .screen-body {
      flex-direction: column;
      gap: 2rem;
      padding: 2rem;
    }

    .app-title {
      flex-direction: row;
    }

    .app-title:after {
      display: none;
    }

    .screen-body-item {
      padding: 0;
    }

    .screen-body-item.left {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
  }

  @media screen and (max-width: 600px) {
  }
</style>
