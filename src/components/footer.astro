---
import { Icon } from 'astro-icon/components';

// Footer minimalista
export interface Props {
  github?: string;
  linkedin?: string;
  repo?: string;
  blog?: string;
}

export let github: string = 'https://github.com/javicordero';
export let linkedin: string = 'https://www.linkedin.com/in/javier-cordero-toscano';
export let repo: string = 'https://github.com/javicordero/acordes-gaditanos';
export let blog: string = 'https://acordesgaditanos.blogspot.com/';
---

<footer class='site-footer'>
  <div class='wrap container-layout brand-social'>
    <div class='col-brand'>
      <p class='brand'>Acordes Gaditanos</p>
      <p>
        <a href={blog}>Blog Antiguo</a>
      </p>
    </div>

    <div class='col-social' aria-label='Redes sociales'>
      <p class='brand'>Redes sociales</p>
      <div class='social-icons'>
        <a
          class='social'
          href='https://x.com/javicordero'
          target='_blank'
          rel='noopener noreferrer'
          aria-label='X'>
          <Icon name='x' width={20} height={20} />
        </a>

        <!-- <a
          class='social'
          href='https://www.instagram.com/javicordero'
          target='_blank'
          rel='noopener noreferrer'
          aria-label='Instagram'>
          <Icon name='instagram' width={21} height={21} />
        </a> -->

        <a
          class='social'
          href='https://www.youtube.com/@javicordero'
          target='_blank'
          rel='noopener noreferrer'
          aria-label='YouTube'>
          <Icon name='youtube' width={23} height={23} />
        </a>
      </div>
    </div>
  </div>

  <div class='wrap container-layout col-author'>
    <p class='small'>Desarrollado por Javier Cordero Toscano</p>
    <div class='author-links'>
      <a
        class='social'
        href={linkedin}
        target='_blank'
        rel='noopener noreferrer'
        aria-label='LinkedIn'>
        <!-- LinkedIn icon -->
        <Icon name='linkedin' width={20} height={20} />
      </a>

      <a class='social' href={github} target='_blank' rel='noopener noreferrer' aria-label='GitHub'>
        <!-- GitHub icon -->
        <Icon name='github' width={20} height={20} />
      </a>
    </div>
  </div>

  <div class='wrap container-layout bottom'>
    <p>Â© {new Date().getFullYear()} Acordes Gaditanos</p>
  </div>

  <style>
    :root {
      --footer-bg: #0f1724;
      --footer-text: #e6eef8;
      --muted: #98a2b3;
      --accent: #60a5fa;
    }

    .site-footer {
      background: var(--primary-color);
      color: var(--footer-text);
      padding: 32px 0;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      row-gap: 16px;
    }

    .site-footer .brand-social {
      display: flex;
      column-gap: 72px;
      row-gap: 16px;
      flex-wrap: wrap;
      box-sizing: border-box;
    }

    .site-footer .col-brand a {
      color: var(--muted);
      font-size: 0.9rem;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .site-footer .col-brand a:hover {
      color: var(--primary-contrast-color);
    }

    .site-footer .col-social,
    .site-footer .col-brand {
      flex: 1;
    }
    .site-footer .col-social .social-icons {
      display: flex;
      justify-content: flex-start;
      gap: 8px;
      align-items: center;
    }

    .site-footer .social {
      color: var(--muted);
      display: inline-flex;
      align-items: center;
      transition: all 0.5s ease;
      transform: scale(1);
    }

    .site-footer .social:has(:hover, :focus) {
      color: var(--primary-contrast-color);
      outline: none;
      transform: scale(1.25);
    }

    .site-footer .col-author {
      display: flex;
      flex-direction: column;
      row-gap: 8px;
    }

    .site-footer .col-author p {
      font-size: 0.8rem;
      color: var(--muted);
    }

    .author-links {
      display: flex;
      gap: 8px;
    }
    .site-footer .brand {
      font-weight: 600;
      font-size: 1rem;
      letter-spacing: 0.2px;
      margin: 0;
    }

    .site-footer .bottom {
      color: var(--muted);
      font-size: 0.8rem;
    }

    @media (max-width: 640px) {
      .site-footer {
        padding: 24px 0;
      }

      .site-footer .wrap {
        padding: 0 4px;
      }

      .site-footer .brand-social {
        flex-direction: column;
      }
    }
  </style>
</footer>
