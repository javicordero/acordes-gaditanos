---
const { pieza, agrupacion, musica, letra, img, year, slug } = Astro.props;
const headingId = `acordes-${slug}`;

// Determinar el tipo de pieza para aplicar colores diferentes
const piezaLower = pieza?.toLowerCase() || '';
let piezaType = 'default';

if (piezaLower.includes('presentaci√≥n') || piezaLower.includes('presentacion')) {
  piezaType = 'presentacion';
} else if (piezaLower.includes('pasodoble')) {
  piezaType = 'pasodoble';
}
---

<article
  class='card'
  style={`background-image: url('${img}');`}
  transition:name={`img-${slug}`}
  aria-labelledby={headingId}>
  <a href={`/acordes/${slug}`}>
    <header>
      <span class='badge' data-pieza-type={piezaType}>{pieza}</span>
    </header>

    <footer>
      <span class='badge' transition:name={`musica-${slug}`}>{musica}</span>
    </footer>
  </a>
</article>

<style>
  :root {
    --pieza-presentacion-color: var(--primary-color);
    --pieza-presentacion-bg: #87ceeb;

    --pieza-pasodoble-color: var(--primary-color);
    --pieza-pasodoble-bg: #ffa07a;

    --pieza-default-color: var(--primary-color);
    --pieza-default-bg: #98fb98;

    --autor-color: var(--primary-color);
    --autor-bg: var(--primary-contrast-color);
  }

  .card {
    background-color: var(--card-background-color);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0px 13px 10px -7px rgba(0, 0, 0, 0.1);
    min-height: 200px;
    transition:
      transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      box-shadow 0.5s ease;

    &:hover {
      transform: scale(1.05) translateY(-12px) rotateZ(-1deg);
      box-shadow:
        0 40px 80px -20px rgba(0, 0, 0, 0.4),
        0 0 40px rgba(255, 255, 255, 0.1),
        inset 0 0 0 1px rgba(255, 255, 255, 0.2);
      z-index: 10;
    }

    &:hover::after {
      content: '';
      position: absolute;
      inset: 0;
      pointer-events: none;
    }
  }

  a {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-between;
  }

  header {
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
  }

  .badge {
    font-family: 'Raleway', sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.2px;
    font-weight: 500;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
    max-width: 95%;
  }

  header > .badge {
    border-radius: 0 6px 0 6px;
    font-size: 16px;
    padding: 6px 10px;

    &[data-pieza-type='presentacion'] {
      color: var(--pieza-presentacion-color);
      background-color: var(--pieza-presentacion-bg);
    }

    &[data-pieza-type='pasodoble'] {
      color: var(--pieza-pasodoble-color);
      background-color: var(--pieza-pasodoble-bg);
    }

    &[data-pieza-type='default'] {
      color: var(--pieza-default-color);
      background-color: var(--pieza-default-bg);
    }
  }

  footer {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;

    & > .badge {
      border-radius: 0 6px 0 6px;
      color: var(--autor-color);
      background-color: var(--autor-bg);
      font-size: 12px;
      padding: 4px 8px;
    }
  }

  @media (max-width: 640px) {
    .card {
      transition: none;
      min-height: 180px;

      &:hover {
        transform: none;
        box-shadow: 0px 13px 10px -7px rgba(0, 0, 0, 0.1);
        filter: none;
        z-index: auto;
      }
    }

    .badge {
      transition: none;
      letter-spacing: 0.1px;
    }

    header > .badge {
      font-size: 15px;
      padding: 4px 8px;
    }

    footer > .badge {
      font-size: 11px;
      padding: 4px 8px;
    }
  }
</style>
