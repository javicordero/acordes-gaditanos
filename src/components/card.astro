---
import { Icon } from 'astro-icon/components';

const { pieza, agrupacion, musica, letra, img, year, slug } = Astro.props;
---

<div class='card-container'>
  <a href={`/acordes/${slug}`}>
    <article class='card'>
      <header '>
        <img transition:name={`img-${slug}`} src={img} alt={pieza} />
      </header>
      <main>
        <div class='title'>
          <h2 transition:name={`pieza-${slug}`} class='title pieza'>{pieza}</h2>
          <h2 transition:name={`agrupacion-${slug}`} class='title'>{agrupacion}</h2>
        </div>
      </main>
      <footer class='autor musica'>
        <div class='svg'>
          <Icon name='clave-de-sol' width={15} height={27} color={'var(--secondary-color)'} />
        </div>
        <span>{musica}</span>
      </footer>
      <!-- <div class='autor letra'>
            <div class='svg'>
              <Icon name='lapiz' width={15} height={30} />
            </div>
            <span>{letra}</span>
          </div> -->
    </article>
  </a>
</div>

<style>
  .card-container {
    height: 100%;
  }
  a {
    text-decoration: none;
    color: inherit;
    height: inherit;
  }

  .card {
    background-color: var(--card-background-color);
    width: auto;
    height: inherit;
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    border: 2px solid var(--secondary-color);
    box-shadow:
      rgba(50, 50, 93, 0.15) 0px 50px 100px -8px,
      rgba(0, 0, 0, 0.25) 0px 30px 60px -40px;
    transition: all 0.5s ease;
    transform: translateY(0) scale(1);
  }
  .card:has(:hover) {
    transform: scale(1.05);
    box-shadow:
      rgba(50, 50, 93, 0.25) 0px 30px 60px -10px,
      rgba(0, 0, 0, 0.3) 0px 18px 36px -18px;
    border-color: var(--primary-contrast-color);
  }

  .card header {
    position: relative;
    top: -16px;
    display: flex;
    justify-content: center;
  }

  .card header a,
  .card header img {
    height: 150px;
    width: 90%;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    transition: transform 0.5s ease;
    transform: scale(1);
  }

  .card:has(:hover) header img {
    transform: scale(1.05);
  }

  .card .title {
    margin: 0;
    font-weight: 500;
    font-size: 1.25rem;
    color: var(--primary-color);
    line-height: 1.1;
  }
  .card main:after {
    content: '';
    display: block;
    width: 50%;
    height: 3px;
    background: var(--primary-contrast-color);
    border-radius: 2px;
    position: relative;
    top: -6px;
    transition: all 0.3s ease;
  }

  .card:has(:hover) main:after {
    width: 90%;
  }

  .card .autor {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 1rem;
  }

  .card .autor.letra > .svg {
    position: relative;
    top: 1.5px;
  }

  .card .autor span {
    font-size: 1rem;
    color: var(--secondary-color);
    /* color: var(--card-background-color); */
  }

  .card main {
    padding: 4px 16px 0 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1 1 auto;
    position: relative;
    top: -12px;
  }
  .card footer {
    padding: 0 16px 0 16px;
    margin-top: auto;
    position: relative;
    top: -8px;
  }

  @media (max-width: 1024px) {
    .card {
      max-width: 380px;
    }

    .card header {
      top: -14px;
    }

    .card header img {
      height: 150px;
      width: calc(100% - 24px);
    }

    .card main {
      gap: 4px;
      padding: 0 12px;
    }

    .card footer {
      padding: 0 12px 8px 12px;
    }

    .card .title {
      font-size: 1.1rem;
    }

    .card .musica {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 640px) {
    .card {
      max-width: 315px;
    }

    .card header {
      top: -12px;
    }

    .card header img {
      height: 100px;
      width: calc(100% - 16px);
    }
    .card main {
      padding: 0 8px;
      gap: 4px;
      top: -8px;
    }

    .card main:after {
      height: 2px;
      top: -4px;
      width: 70%;
    }

    .card footer {
      padding: 0 8px 6px 8px;
      top: -4px;
    }

    .card .title {
      font-size: 1.08rem;
    }

    .card .autor span {
      font-size: 0.9rem;
    }

    .card:has(:hover, ) {
      transform: scale(1.02);
    }

    .card:has(:hover) header img {
      transform: scale(1.02);
    }
  }
</style>
