    url: 'https://amzn.to/4pt1v8V',
  },
];

// Seleccionar 4 productos, algunos fijos y el resto aleatorios
function getRandomProducts(arr: Product[], n: number): Product[] {
  const fixed = arr.filter((p) => p.always);
  const rest = arr.filter((p) => !p.always);
  const missing = Math.max(0, n - fixed.length);
  const selected = [
    ...fixed,
    ...rest
      .map((item) => ({ item, sort: Math.random() }))
      .sort((a, b) => a.sort - b.sort)
      .slice(0, missing)
      .map(({ item }) => item),
  ];
  // Shuffle the final result
  return selected
    .map((item) => ({ item, sort: Math.random() }))
    .sort((a, b) => a.sort - b.sort)
    .map(({ item }) => item);
}

const randomProducts = getRandomProducts(products, 4);
---

<RightColumnCard title='PARA TU GUITARRA' headingId='para-tu-guitarra-title' class={className}>
  <ul>
    {
      randomProducts.map((product) => (
        <li>
          <a href={product.url} target='_blank' rel='noopener noreferrer'>
            <figure>
              <Image
                src={product.image}
                alt={product.name}
                loading='lazy'
                decoding='async'
                width={60}
                height={60}
              />
            </figure>
            <span class='product-name'>{product.name}</span>
          </a>
        </li>
      ))
    }
  </ul>

  <style>
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    li {
      border-radius: 8px;
      transition: transform 0.3s ease;

      &:hover {
        transform: translateX(2px);
      }
    }

    li a {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
      border-radius: 8px;
      background-color: rgba(0, 0, 0, 0.02);
      transition: all 0.3s ease;

      &:hover {
        background-color: rgba(218, 165, 32, 0.08);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }
    }

    figure {
      width: 60px;
      height: 60px;
      margin: 0;
      border-radius: 8px;
      overflow: hidden;
      background-color: var(--card-background-color);
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(0, 0, 0, 0.08);

      & img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 4px;
      }
    }

    .product-name {
      flex: 1;
      font-size: 1rem;
      line-height: 1.4;
      color: var(--primary-color);
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }

    @media (max-width: 640px) {
      figure {
        width: 50px;
        height: 50px;
      }

      .product-name {
        font-size: 0.9rem;
      }
    }
  </style>
</RightColumnCard>
