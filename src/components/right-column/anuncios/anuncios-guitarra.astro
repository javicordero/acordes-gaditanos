---
import RightColumnCard from '../../../layouts/RightColumnCard.astro';

const { class: className } = Astro.props;

// Productos de Amazon para guitarras
const productos = [
  {
    nombre: 'Cejilla met√°lica',
    imagen: 'https://m.media-amazon.com/images/I/61PYWd6mVuL._AC_SX679_.jpg',
    url: 'https://amzn.to/4pstLsj',
  },
  {
    nombre: 'Afinador de pinza',
    imagen: 'https://m.media-amazon.com/images/I/710EIwj4oRL._AC_SX679_.jpg',
    url: 'https://amzn.to/3XRjLNw',
  },
  {
    nombre: 'Cejilla de madera',
    imagen: 'https://m.media-amazon.com/images/I/51fxFmlGsQL._AC_SX679_.jpg',
    url: 'https://amzn.to/4p77lgA',
  },
  {
    nombre: "Cuerdas D'Addario",
    imagen: 'https://m.media-amazon.com/images/I/8169k0GrNyL._AC_SX679_.jpg',
    url: 'https://amzn.to/4ioVPuD',
  },
];
---

<RightColumnCard title='PARA TU GUITARRA' headingId='para-tu-guitarra-title' class={className}>
  <ul>
    {
      productos.map((producto) => (
        <li>
          <a href={producto.url} target='_blank' rel='noopener noreferrer'>
            <figure>
              <img src={producto.imagen} alt={producto.nombre} loading='lazy' decoding='async' />
            </figure>
            <span class='product-name'>{producto.nombre}</span>
          </a>
        </li>
      ))
    }
  </ul>

  <style>
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    li {
      border-radius: 8px;
      transition: transform 0.3s ease;

      &:hover {
        transform: translateX(2px);
      }
    }

    li a {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
      border-radius: 8px;
      background-color: rgba(0, 0, 0, 0.02);
      transition: all 0.3s ease;

      &:hover {
        background-color: rgba(218, 165, 32, 0.08);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }
    }

    figure {
      width: 60px;
      height: 60px;
      margin: 0;
      border-radius: 8px;
      overflow: hidden;
      background-color: var(--card-background-color);
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(0, 0, 0, 0.08);

      & img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 4px;
      }
    }

    .product-name {
      flex: 1;
      font-size: 1rem;
      line-height: 1.4;
      color: var(--primary-color);
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }

    @media (max-width: 640px) {
      figure {
        width: 50px;
        height: 50px;
      }

      .product-name {
        font-size: 0.9rem;
      }
    }
  </style>
</RightColumnCard>
