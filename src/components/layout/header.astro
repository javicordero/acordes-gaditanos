<header role='banner'>
  <div class='nav-bar-container container-layout'>
    <div class='burguer-menu'>
      <button
        class='hamburger-lines'
        aria-expanded='false'
        aria-controls='primary-menu'
        aria-label='Abrir menú'>
        <span class='line line1'></span>
        <span class='line line2'></span>
        <span class='line line3'></span>
      </button>
    </div>

    <div class='logo'>
      <h1 class='brand'><a href='/'>Acordes Gaditanos</a></h1>
    </div>
  </div>

  <nav id='primary-menu' class='menu-items' aria-label='Main navigation'>
    <ul>
      <li><a href='/'>Inicio</a></li>
      <li><a href='/colaborar'>colaborar</a></li>
      <li><a href='/contacto'>contacto</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    height: 48px;
    width: 100%;
    box-shadow: 0 1px 4px rgb(146 161 176 / 15%);
    position: fixed;
    top: 0;
    z-index: 10;
    background-color: var(--color-bg);
  }

  /* Top of the HTML: nav-bar-container (burger + logo) */
  .nav-bar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  /* burger control */
  .burguer-menu {
    & .hamburger-lines {
      display: block;
      height: 24px;
      width: 32px;
      z-index: 2;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      cursor: pointer;
      transform: scaleX(1);
      transition: all 0.5s ease;
      appearance: none;
      -webkit-appearance: none;
      border: 0;
      background: transparent;
      padding: 0;

      &:hover {
        transform: scale(1.1);
      }

      & .line {
        display: block;
        height: 4px;
        width: 100%;
        border-radius: 10px;
        background: var(--primary-color);
      }

      & .line1 {
        transform-origin: 0% 0%;
        transition: transform 0.4s ease-in-out;
      }

      & .line2 {
        transition: transform 0.2s ease-in-out;
      }

      & .line3 {
        transform-origin: 0% 100%;
        transition: transform 0.4s ease-in-out;
      }
    }
  }

  /* logo  */
  .logo {
    position: relative;
    display: inline-block;

    & .brand {
      margin: 0;

      & a {
        text-decoration: none;
        font-size: 1.5rem;
        color: var(--primary-color);
        font-weight: bold;
        display: inline-block;
        position: relative;

        &::after {
          content: '';
          position: absolute;
          left: 0;
          bottom: -3px;
          height: 3px;
          width: 100%;
          background: var(--primary-contrast-color);
          transform-origin: left;
          transform: scaleX(0);
          transition: transform 0.3s ease;
        }

        &:hover::after {
          transform: scaleX(1);
        }
      }
    }
  }

  /* menu */
  .menu-items {
    padding-top: 120px;
    background-color: var(--color-bg);
    height: 100vh;
    width: 100%;
    transform: translate(-150%);
    display: flex;
    flex-direction: column;
    transition: transform 0.5s ease-in-out;
    text-align: center;

    & ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 16px;
      align-items: center;
      width: 100%;
    }

    & a {
      text-decoration: none;
      color: var(--primary-color);
      font-family: 'Montserrat', sans-serif;
      font-weight: 700;
      letter-spacing: 1.4px;
      text-transform: uppercase;
      font-size: 1.6rem;
      position: relative;
      display: inline-block;
    }

    & a::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -3px;
      height: 3px;
      width: 100%;
      background: var(--primary-contrast-color);
      transform-origin: left;
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }

    & a:hover::after {
      transform: scaleX(1);
    }
  }

  & input[type='checkbox']:checked ~ .menu-items {
    transform: translateX(0);
  }

  .displayed {
    transform: translateX(0) !important;
  }

  /* classes that animate the burger into a cross */
  .line1.line-displayed {
    transform: rotate(45deg);
  }

  .line2.line-displayed {
    transform: scaleY(0);
  }

  .line3.line-displayed {
    transform: rotate(-45deg);
  }

  @media (max-width: 640px) {
    .nav-bar-container {
      width: 95%;
    }
  }
</style>

<script>
  function initHeader() {
    const burguer = document.querySelector('.hamburger-lines');
    const menu = document.querySelector('#primary-menu');
    const logo = document.querySelector('.logo');

    if (!burguer || !menu || !logo) return;

    burguer.onclick = () => {
      const isOpen = menu.classList.contains('displayed');

      if (!isOpen) {
        menu.classList.add('displayed');
        menu.setAttribute('aria-hidden', 'false');
        burguer.setAttribute('aria-expanded', 'true');
        logo.classList.add('d-none');
        document.querySelector('.line1')?.classList.add('line-displayed');
        document.querySelector('.line2')?.classList.add('line-displayed');
        document.querySelector('.line3')?.classList.add('line-displayed');
      } else {
        menu.classList.remove('displayed');
        menu.setAttribute('aria-hidden', 'true');
        burguer.setAttribute('aria-expanded', 'false');
        logo.classList.remove('d-none');
        document.querySelector('.line1')?.classList.remove('line-displayed');
        document.querySelector('.line2')?.classList.remove('line-displayed');
        document.querySelector('.line3')?.classList.remove('line-displayed');
      }
    };
  }

  // Inicializa en la primera carga y en cada navegación con ClientRouter
  document.addEventListener('astro:page-load', initHeader);
</script>
