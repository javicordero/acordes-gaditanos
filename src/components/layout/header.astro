---
import Logo from '../../../public/icons/logo.svg';
---

<header role='banner' transition:name='site-header'>
  <div class='container-layout nav-bar-container'>
    <button
      class='menu-toggle'
      aria-expanded='false'
      aria-controls='primary-menu'
      aria-label='Abrir menÃº'>
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div class='branding'>
      <h1 transition:persist><a href='/'>Acordes Gaditanos</a></h1>
      <picture>
        <a href='/' aria-label='Inicio'>
          <img src={Logo.src} alt='Acordes Gaditanos logo' transition:persist />
        </a>
      </picture>
    </div>
  </div>

  <nav id='primary-menu' aria-label='Main navigation'>
    <ul>
      <li><a href='/'>Inicio</a></li>
      <li><a href='/colaborar'>Colaborar</a></li>
      <li><a href='/contacto'>Contacto</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    height: var(--nav-height);
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 9999;
    background-color: var(--primary-color);
  }

  .nav-bar-container {
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    padding: 0 4px;
  }

  .menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 24px;
    width: 32px;
    cursor: pointer;
    transition: transform 0.5s ease;
    appearance: none;
    border: 0;
    background: transparent;
    padding: 0;
    z-index: 2;

    &:hover {
      transform: scale(1.1);
    }

    & span {
      display: block;
      height: 4px;
      width: 100%;
      border-radius: 10px;
      background: var(--primary-contrast-color);
      transition: transform 0.4s ease-in-out;
    }

    & span:nth-child(1) {
      transform-origin: 0% 0%;
    }

    & span:nth-child(2) {
      transition: transform 0.2s ease-in-out;
    }

    & span:nth-child(3) {
      transform-origin: 0% 100%;
    }
  }

  .branding {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    gap: 8px;

    & h1 {
      position: relative;
      bottom: 1px;
      font-family: 'Bodoni', serif;
      font-style: italic;
    }

    & h1 a {
      text-decoration: none;
      font-size: 1.5rem;
      color: var(--primary-contrast-color);
      font-weight: bold;
    }

    & picture {
      position: relative;
      top: 2px;
    }
    & img {
      border-radius: 40px;
      height: 32px;
      width: auto;
      background-color: var(--primary-contrast-color);
    }
  }

  nav {
    padding-top: 120px;
    background-color: var(--primary-color);
    height: 100vh;
    width: 100%;
    transform: translate(-150%);
    display: flex;
    flex-direction: column;
    transition: transform 0.5s ease-in-out;
    text-align: center;

    & ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 16px;
      align-items: center;
    }

    & a {
      text-decoration: none;
      color: var(--primary-contrast-color);
      font-family: 'Montserrat', sans-serif;
      font-weight: 700;
      letter-spacing: 1.4px;
      text-transform: uppercase;
      font-size: 1.6rem;
      position: relative;
      display: inline-block;

      &::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -3px;
        height: 3px;
        width: 100%;
        background: var(--primary-contrast-color);
        transform-origin: left;
        transform: scaleX(0);
        transition: transform 0.3s ease;
      }

      &:hover::after {
        transform: scaleX(1);
      }
    }
  }

  nav.is-open {
    transform: translateX(0);
  }

  .menu-toggle.is-open span:nth-child(1) {
    transform: rotate(45deg);
  }

  .menu-toggle.is-open span:nth-child(2) {
    transform: scaleY(0);
  }

  .menu-toggle.is-open span:nth-child(3) {
    transform: rotate(-45deg);
  }

  .branding.is-hidden {
    visibility: hidden;
  }

  @media (max-width: 640px) {
    header {
      height: 48px;
    }

    .nav-bar-container {
      width: 95%;
      padding: 0;
    }

    .menu-toggle {
      height: 20px;
      width: 28px;

      & span {
        height: 3px;
      }
    }

    .branding h1 {
      bottom: 2px;
      & a {
        font-size: 1.2rem;
      }
    }

    .branding img {
      height: 28px;
    }
  }
</style>

<style is:global>
  ::view-transition-group(site-header) {
    z-index: 9999;
  }
</style>

<script>
  function initHeader() {
    const toggle = document.querySelector('.menu-toggle');
    const nav = document.querySelector('#primary-menu');
    const branding = document.querySelector('.branding');

    if (!toggle || !nav || !branding) return;

    toggle.onclick = () => {
      const isOpen = nav.classList.contains('is-open');
      if (isOpen) {
        nav.classList.remove('is-open');
        toggle.classList.remove('is-open');
        nav.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
      } else {
        nav.classList.add('is-open');
        toggle.classList.add('is-open');
        nav.setAttribute('aria-hidden', 'false');
        toggle.setAttribute('aria-expanded', 'true');
      }
    };
  }

  document.addEventListener('astro:page-load', initHeader);
</script>
