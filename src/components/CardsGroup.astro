---
import Card from './Card.astro';
const { year, acordes, subtitle } = Astro.props;

// Generar ID estable para accesibilidad
const headingId = `year-${year}`;
---

<article
  class={`year-group${subtitle ? ' year-group--with-subtitle' : ''}`}
  aria-labelledby={headingId}>
  <header>
    <h2 id={headingId} class='is-title-minus'>{year}</h2>
    {subtitle && <h3>{subtitle}</h3>}
  </header>

  <div class='acordes-grid' role='region' aria-labelledby={headingId}>
    {
      acordes.map((acorde, idx) => {
        const { slug, data } = acorde;
        const { pieza, agrupacion, musica, letra, img, year: y } = data;
        return (
          <Card
            pieza={pieza}
            agrupacion={agrupacion}
            musica={musica}
            letra={letra}
            img={img}
            year={y}
            slug={slug}
            transitionKey={`${year}-${idx}`}
          />
        );
      })
    }
  </div>
</article>

<style>
  .year-group {
    position: relative;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .year-group--with-subtitle {
    gap: 8px;
  }

  header {
    display: flex;
    flex-direction: column;
    gap: 10px;

    & h2 {
      position: relative;
      color: var(--primary-color);
      font-size: 1.625rem;
      font-family: 'Montserrat', sans-serif;
      font-weight: 700;
      max-width: fit-content;
      margin: 0;

      &::after {
        content: '';
        display: block;
        position: absolute;
        left: 0;
        bottom: -4px;
        width: 90%;
        height: 4px;
        background: var(--primary-contrast-color);
      }
    }

    & h3 {
      font-size: 1.355rem;
      font-weight: 600;
      color: var(--secondary-color);
      letter-spacing: 0.3px;
    }
  }

  .acordes-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--card-padding);
  }

  /* Media queries */
  @media (max-width: 1024px) {
    .acordes-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 640px) {
    .year-group {
      gap: calc(var(--card-padding-sm) - 2px);
    }
    .year-group--with-subtitle {
      gap: 4px;
    }

    .acordes-grid {
      gap: 8px;
      grid-template-columns: repeat(2, 1fr);
      align-items: stretch;
    }

    header {
      gap: 6px;
      & h2::after {
        height: 3px;
        bottom: -1px;
      }

      & h3 {
        font-size: 1.15rem;
        letter-spacing: 0.2px;
      }
    }
  }
</style>
