<nav>
  <div class='nav-bar-container container-layout'>
    <div class='burguer-menu'>
      <div class='hamburger-lines'>
        <span class='line line1'></span>
        <span class='line line2'></span>
        <span class='line line3'></span>
      </div>
    </div>

    <div class='logo'>
      <a href='/'>Acordes Gaditanos</a>
    </div>
  </div>

  <div class='menu-items'>
    <li><a href='/'>Inicio</a></li>
    <li><a href='/colaborar'>colaborar</a></li>
    <li><a href='/contacto'>contacto</a></li>
  </div>
</nav>

<style>
  nav {
    height: 48px;
    width: 100%;
    box-shadow: 0 1px 4px rgb(146 161 176 / 15%);
    position: fixed;
    top: 0;
    z-index: 10;
    background-color: var(--color-bg);
  }

  .nav-bar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  nav .checkbox {
    display: block;
    height: 24px;
    width: 32px;
    position: relative;
    left: 20px;
    z-index: 5;
    opacity: 0;
    cursor: pointer;
  }

  nav .hamburger-lines {
    display: block;
    height: 24px;
    width: 32px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
    transform: scaleX(1);
    transition: all 0.5s ease;
  }

  nav .hamburger-lines:hover {
    transform: scale(1.08);
  }

  nav .hamburger-lines .line {
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 10px;
    background: var(--primary-color);
  }

  nav .hamburger-lines .line1 {
    transform-origin: 0% 0%;
    transition: transform 0.4s ease-in-out;
  }

  nav .hamburger-lines .line2 {
    transition: transform 0.2s ease-in-out;
  }

  nav .hamburger-lines .line3 {
    transform-origin: 0% 100%;
    transition: transform 0.4s ease-in-out;
  }

  nav input[type='checkbox']:checked ~ .menu-items {
    transform: translateX(0);
  }

  .line1.line-displayed {
    transform: rotate(45deg);
  }

  .line2.line-displayed {
    transform: scaleY(0);
  }

  .line3.line-displayed {
    transform: rotate(-45deg);
  }

  nav input[type='checkbox']:checked ~ .hamburger-lines .line2 {
    transform: scaleY(0);
  }

  nav input[type='checkbox']:checked ~ .hamburger-lines .line3 {
    transform: rotate(-45deg);
  }

  .logo a {
    text-decoration: none;
    font-size: 1.5rem;
    color: var(--primary-color);
    font-weight: bold;
  }

  /* línea amarilla bajo el logo (igual que en los items del menú) */
  .logo {
    position: relative;
    display: inline-block;
  }

  .logo a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    height: 3px;
    width: 100%;
    background: var(--primary-contrast-color);
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .logo a:hover::after {
    transform: scaleX(1);
  }

  nav .menu-items {
    padding-top: 120px;
    background-color: var(--color-bg);
    height: 100vh;
    width: 100%;
    transform: translate(-150%);
    /* transform: translate(0); */
    display: flex;
    flex-direction: column;
    transition: transform 0.5s ease-in-out;
    text-align: center;
    gap: 16px;
  }

  nav input[type='checkbox']:checked ~ .menu-items {
    transform: translateX(0);
  }

  .displayed {
    transform: translateX(0) !important;
  }

  .menu-items a {
    text-decoration: none;
    color: var(--primary-color);
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    letter-spacing: 1.4px;
    text-transform: uppercase;
    font-size: 1.6rem;
    position: relative;
    display: inline-block;
  }

  /* línea animada que crece de izquierda a derecha */
  .menu-items a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -3px;
    height: 3px;
    width: 100%;
    background: var(--primary-contrast-color);
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .menu-items a:hover::after {
    transform: scaleX(1);
  }

  nav input[type='checkbox']:checked ~ .logo {
    display: none;
  }

  @media (max-width: 640px) {
    .nav-bar-container {
      width: 95%;
    }
  }
</style>

<script>
  function initHeader() {
    const burguer = document.querySelector('.hamburger-lines');
    const menu = document.querySelector('.menu-items');
    const logo = document.querySelector('.logo');

    if (!burguer || !menu || !logo) return;

    burguer.onclick = () => {
      const isOpen = menu.classList.contains('displayed');

      if (!isOpen) {
        menu.classList.add('displayed');
        logo.classList.add('d-none');
        document.querySelector('.line1')?.classList.add('line-displayed');
        document.querySelector('.line2')?.classList.add('line-displayed');
        document.querySelector('.line3')?.classList.add('line-displayed');
      } else {
        menu.classList.remove('displayed');
        logo.classList.remove('d-none');
        document.querySelector('.line1')?.classList.remove('line-displayed');
        document.querySelector('.line2')?.classList.remove('line-displayed');
        document.querySelector('.line3')?.classList.remove('line-displayed');
      }
    };
  }

  // Inicializa en la primera carga y en cada navegación con ClientRouter
  document.addEventListener('astro:page-load', initHeader);
</script>
