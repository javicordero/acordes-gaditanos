---
import { render } from 'astro:content';
import { Icon } from 'astro-icon/components';

const { acorde } = Astro.props;
const { data, slug } = acorde;
const { pieza, agrupacion, musica, img, year, letra } = data;
const { Content } = await render(acorde);
---

<section class='acordes-container'>
  <header class='card-header'>
    <div class='left-col'>
      <div class='app-title'>
        <h2>
          <span transition:name={`pieza-${slug}`} class='pieza'>
            {pieza}
          </span>
          <span transition:name={`agrupacion-${slug}`} class='agrupacion'>
            {agrupacion}
          </span>
        </h2>
      </div>

      <div class='autores'>
        <div class='autor musica'>
          <div class='svg'>
            <Icon name='clave-de-sol' width={15} height={27} />
          </div>
          <span>{musica}</span>
        </div>
        <div class='autor letra'>
          <div class='svg'>
            <Icon name='lapiz' width={15} height={30} />
          </div>
          <span>{letra}</span>
        </div>
      </div>
    </div>

    <div class='autores-imagen'>
      <div class='autores'>
        <div class='autor musica'>
          <div class='svg'>
            <Icon name='clave-de-sol' width={15} height={27} />
          </div>
          <span>{musica}</span>
        </div>
        <div class='autor letra'>
          <div class='svg'>
            <Icon name='lapiz' width={15} height={30} />
          </div>
          <span>{letra}</span>
        </div>
      </div>
      <img
        transition:name={`img-${slug}`}
        class='card-image'
        src={img}
        alt={`${pieza} ${agrupacion}`}
      />
    </div>
  </header>
  <main>
    <Content />
  </main>
</section>

<style>
  .acordes-container {
    background-color: var(--card-background-color);
    border-radius: 8px;
    border: 1px solid var(--primary-color);
    box-shadow:
      rgba(50, 50, 93, 0.25) 0px 50px 100px -16px,
      rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
    /* Limitar ancho para que no sobrepase el container-layout en la página */
    width: 100%;
    max-width: 600px; /* 600px base */
    box-sizing: border-box;
    margin: 0;
    display: flex;
    flex-direction: column;
    /* Evitar que la card crezca más allá de su max-width en layouts flex padres */
    flex: 0 1 auto;
    gap: 8px;
  }

  /* Header: left column (title + autores) and right column (imagen). Use flex
     so widths son controlables sin overflow tricks. */
  .acordes-container > header.card-header {
    display: flex;
    align-items: flex-start;
    gap: 24px;
    padding: 32px 32px 0 32px;
    box-sizing: border-box;
    text-transform: uppercase;
  }

  .left-col {
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1 1 auto;
    min-width: 0;
  }

  .app-title {
    position: relative;

    display: flex;
    flex-direction: column;
  }

  .app-title h2 {
    color: var(--primary-color);
    font-size: 1.625rem;
    font-weight: 700;
    line-height: 1.79rem;
  }

  /* raya amarilla justo debajo del título/agrupacion (fluye en el document) */
  .app-title:after {
    content: '';
    display: block;
    width: 89%;
    height: 4px;
    background: var(--primary-contrast-color);
  }

  .acordes-container > header > .title h1 {
    margin: 0;
    font-size: var(--acorde-card-header-font-size-sm);
    color: var(--primary-color);
  }

  .acordes-container .autores {
    display: flex;
    flex-direction: column;
    text-transform: none;
  }

  .acordes-container .autor {
    color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 0.95rem;
  }

  .autores-imagen .autores {
    display: none;
  }

  .autor.letra {
    position: relative;
    bottom: 8px;
  }
  .autor.letra > .svg {
    position: relative;
    top: 1.5px;
  }

  .acordes-container > header img.card-image {
    height: auto;
    border-radius: 8px;
    width: 200px;
    max-width: 100%;
    object-fit: cover;
    display: block;
  }

  .acordes-container > main {
    padding: 0 4px;
    display: grid;
    place-items: center;
  }

  .acordes-container > main :global(pre) {
    margin: 0;
    letter-spacing: normal;
  }

  .acordes-container > main :global(pre a) {
    color: var(--acorde-color);
  }

  /* Intermedio: reducir anchura de la card en tablets / pantallas pequeñas de desktop */
  @media (min-width: 640px) and (max-width: 1023.98px) {
    .acordes-container {
      max-width: 576px; /* 36rem ≈ 576px */
    }
  }

  @media (min-width: 1024px) {
    .acordes-container {
      max-width: 650px;
    }
  }

  .acordes-container .autor {
    gap: 8px;
    min-width: max-content;
  }

  .acordes-container > main :global(pre) {
    font-size: 0.95rem;
    line-height: 1.25rem;
  }
  /* Desktop: hacer la imagen más grande y limitar la columna izquierda */
  .acordes-container > header .autores-imagen {
    /* width: 200px;
    flex: 0 0 200px; */
    max-width: 100%;
    margin: auto;
  }

  .left-col {
    max-width: calc(100% - 224px); /* deja espacio para imagen (200px) + gap (24px) */
  }

  @media (max-width: 780px) {
    .acordes-container > header.card-header {
      gap: 16px;
      padding: 16px 16px 0 16px;
    }
  }

  @media (max-width: 640px) {
    .acordes-container > header.card-header {
      flex-direction: column;
      gap: 8px;
      padding: 32px 32px 0 32px;
    }

    .acordes-container > header img.card-image {
      max-width: 280px;
      width: 100%;
      margin: 8px auto auto auto;
    }
    .app-title:after {
      width: 240px;
      height: 3px;
      bottom: -3px;
    }

    .autores-imagen {
      width: 100%;
    }

    .left-col {
      max-width: 100%;
    }

    .autores-imagen .autores {
      display: flex !important;
      flex-direction: row;
      justify-content: space-between;
      max-width: 280px;
      margin: auto;
      flex-wrap: wrap;
    }

    .card-image {
      width: 100%;
      max-width: none;
    }

    .acordes-container .autores {
      display: none;
    }

    .autor.letra {
      bottom: 0;
    }
  }

  @media (max-width: 480px) {
    .acordes-container > main :global(pre) {
      font-size: 0.8rem;
      line-height: 1.15rem;
    }

    .acordes-container > header img.card-image {
      max-width: 240px;
    }

    .autores-imagen .autores {
      max-width: 240px;
    }
  }

  @media (max-width: 392px) {
    .acordes-container > main :global(pre) {
      font-size: 0.73rem;
      line-height: 1.1rem;
    }
  }

  @media (max-width: 367px) {
    .acordes-container > main :global(pre) {
      font-size: 0.7rem;
      line-height: 1rem;
    }
  }
</style>
